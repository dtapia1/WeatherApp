<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/hourly_forecast">

    <android.support.v7.widget.RecyclerView
        style="@style/ForecastListStyle"
        android:id="@+id/recyclerview_hourly_forecast"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingTop="@dimen/card_vertical_padding_small"
        android:paddingBottom="@dimen/card_vertical_padding_small"/>
    <!-- empty list -->
    <TextView
        android:id="@+id/recyclerview_forecast_empty"
        android:text="@string/empty_forecast_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

</FrameLayout>

