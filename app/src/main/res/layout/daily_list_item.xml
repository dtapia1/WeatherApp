<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    app:cardBackgroundColor="@color/primary_color"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_left_margin"
        android:paddingLeft="@dimen/activity_left_margin"
        android:paddingRight="@dimen/activity_left_margin"
        android:paddingTop="24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dayNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingBottom="12dp"
                android:textColor="#ffffffff"
                android:textSize="24sp"
                tools:text="Today"/>

            <TextView
                android:id="@+id/dateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="#87ffffff"
                android:textSize="14sp"
                tools:text="Feb, 22"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:src="@drawable/clear_day"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/highTemperatureLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:paddingBottom="16dp"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    tools:text="100"/>

                <ImageView
                    android:id="@+id/degreeImageViewHigh"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_alignTop="@+id/highTemperatureLabel"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/highTemperatureLabel"
                    android:layout_toRightOf="@+id/highTemperatureLabel"
                    android:maxHeight="5dp"
                    android:maxWidth="5dp"
                    android:src="@drawable/degree"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/lowTemperatureLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:textColor="#87ffffff"
                    android:textSize="14sp"
                    tools:text="100"/>

                <ImageView
                    android:id="@+id/degreeImageViewLow"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_alignTop="@+id/lowTemperatureLabel"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/lowTemperatureLabel"
                    android:layout_toRightOf="@+id/lowTemperatureLabel"
                    android:maxHeight="5dp"
                    android:maxWidth="5dp"
                    android:src="@drawable/degree"/>

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>