<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="120dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="4dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:paddingTop="4dp"
              tools:background="@color/blue_400"
              android:layout_weight="60">

    <TextView
        android:id="@+id/dayNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:layout_above="@+id/iconImageView"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        tools:text="Mon"
        android:fontFamily="sans-serif"/>


    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/clear_day"/>
    <!--
     <TextView
         android:id="@+id/dateLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true"
         android:textColor="#ffffffff"
         android:textSize="13sp"
         android:layout_toRightOf="@+id/iconImageView"
         android:paddingLeft="10dp"
         tools:text="12/15"/>
         -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:weightSum="100"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/highTemperatureLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            tools:text="100"
            android:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/temperatureDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#87ffffff"
            android:textSize="11sp"
            android:paddingLeft="2dp"
            android:text="/"
            android:fontFamily="sans-serif"/>
        <TextView
            android:id="@+id/lowTemperatureLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#87ffffff"
            android:textSize="10sp"
            android:paddingLeft="1dp"
            tools:text="100"
            android:fontFamily="sans-serif"/>
    </LinearLayout>

</LinearLayout>