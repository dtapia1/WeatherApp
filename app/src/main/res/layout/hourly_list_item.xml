<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                tools:background="@drawable/bg_gradient">

    <TextView
        android:id="@+id/timeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_left_margin"
        android:layout_centerVertical="true"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        tools:text="12 PM"
        android:fontFamily="sans-serif"/>

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="72dp"
        android:layout_centerVertical="true"
        android:src="@drawable/partly_cloudy" />

    <TextView
        android:id="@+id/temperatureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/activity_right_margin"
        android:layout_centerVertical="true"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        tools:text="100"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/summaryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iconImageView"
        android:layout_toEndOf="@+id/iconImageView"
        android:textColor="#ffffffff"
        android:layout_toLeftOf="@+id/temperatureLabel"
        android:paddingLeft="16dp"
        tools:text="Partly Cloudy"
        android:fontFamily="sans-serif"/>
</RelativeLayout>